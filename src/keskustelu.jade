section(auto-scroll, id="discussion")
  div.message(ng-repeat="viesti in viestit track by $index",  class="message-animate", ng-class="{own: viesti.own, friend: !viesti.own}")
    div(ng-bind="viesti.message", class="text") 
    div(ng-bind="viesti.nick", class="nick")
    div(ng-bind="viesti.timestamp |messageDateFilter", class="time")